/* 8 */
.btn{
  display: flex;
  align-items: middle;
  padding: 8px 50px 8px;
  border: 1px solid #4a0fec;
  background-color: #eb0606;
  width:auto;
}
/* 圆角按钮 */
.circle-btn__hover_btn {
  opacity: 0.3;
  transform: scale(0.5, 0.5);
}
/* 方框按钮 */
.rect-btn__hover_btn {
  position: relative;
  top: 10rpx;
  left: 30rpx;
  box-shadow: 0px 0px 8px rgba(0, 255, 34, 0.2) inset;
}